{
  "name": "hexaplace-api",
  "version": "0.1.0",
  "displayName": "Hexaplace API",
  "description": "Hexaplace: an e-commerce sample app to showcase Hexagonal architecture",
  "contributors": [],
  "private": true,
  "license": "UNLICENSED",
  "experimentalDecorators": true,
  "scripts": {
    "build:nest": "nest build",
    "build": "tsc",
    "docker:up": "docker compose -f infra/docker-compose.yaml --env-file infra/.env up -d --force-recreate",
    "docker:down": "docker compose  -f infra/docker-compose.yaml --env-file infra/.env down",
    "format": "prettier --ignore-unknown --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "open-api:generate": "npm run ts src/generate-open-api.ts",
    "prebuild": "rimraf dist",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "migration:up": "npm run build && npm run ts src/migration.ts -- --action=up",
    "migration:down": "npm run build && npm run ts src/migration.ts -- --action=down",
    "prepare": "npm install husky -D && husky install",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test:all": "jest --config jest.all.config.js --runInBand",
    "test:all:cov": "jest --coverage --config jest.all.config.js --runInBand",
    "test:e2e": "jest --config jest.e2e.config.js --runInBand",
    "test:unit": "jest --config jest.config.js --runInBand",
    "test:unit:cov": "jest --coverage --config jest.config.js --runInBand",
    "ts": "ts-node -r tsconfig-paths/register --project ./tsconfig.json",
    "preinstall": "npx npm-force-resolutions"
  },
  "dependencies": {
    "@badrap/result": "^0.2.8",
    "@faker-js/faker": "^6.0.0-alpha.5",
    "@nestjs/common": "8.2.6",
    "@nestjs/config": "1.1.6",
    "@nestjs/core": "8.2.6",
    "@nestjs/cqrs": "8.0.0",
    "@nestjs/microservices": "8.2.6",
    "@nestjs/platform-express": "8.2.6",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/terminus": "8.0.4",
    "@nestjs/typeorm": "8.0.0",
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "@team-supercharge/nest-amqp": "^3.2.1",
    "@type-cacheable/core": "^11.0.1",
    "@types/lru-cache": "^5.1.1",
    "aws-sdk": "^2.1066.0",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.14.0",
    "cron-parser": "^4.6.0",
    "dotenv": "^15.0.0",
    "env-var": "^7.1.1",
    "form-data": "^4.0.0",
    "i": "^0.3.7",
    "jwt-decode": "^3.1.2",
    "keycloak-connect": "^21.0.1",
    "lru-cache": "^6.0.0",
    "mime-db": "^1.52.0",
    "mime-types": "^2.1.34",
    "nanoid": "^3.2.0",
    "nest-event": "^1.0.8",
    "nest-keycloak-connect": "^1.8.3",
    "nest-openapi-tools": "^4.0.1",
    "nestjs-console": "^7.0.1",
    "npm": "^8.18.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.2",
    "swagger-ui-express": "^4.3.0",
    "ts-md5": "^1.3.1",
    "typeorm": "^0.2.41",
    "typeorm-seeding": "^1.6.1",
    "ulid": "^2.3.0",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "ws": "^8.4.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.0",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.6",
    "@types/aws-sdk": "^2.7.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/joi": "^14.3.4",
    "@types/mime-db": "^1.43.1",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^14.18.10",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.7.5",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "commander": "^8.3.0",
    "ejs": "^3.1.6",
    "eslint": "^8.24.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^28.0.0",
    "jest-cucumber": "^3.0.1",
    "jest-junit": "^13.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "supertest": "^6.2.2",
    "ts-jest": "^28.0.3",
    "ts-loader": "^9.2.6",
    "ts-morph": "^13.0.3",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "4.7.4"
  },
  "resolutions": {
    "axios": "1.3.4"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test:unit:cov",
      "pre-commit": "npm run format && npm run lint"
    }
  }
}
